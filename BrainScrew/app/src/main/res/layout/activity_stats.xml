<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ics466.brainscrew.StatsActivity"
    android:background="#000000">

    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="STATS"
        android:id="@+id/textViewStatsTitle"
        android:textStyle="bold"
        android:textSize="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:textAlignment="center"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LIFETIME"
        android:id="@+id/textViewLabel"
        android:layout_below="@+id/textViewStatsTitle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="35dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonArrowLeft"
        android:src="@drawable/levels_arrowleft"
        android:scaleType="fitCenter"
        android:background="#000000"
        android:layout_below="@+id/textViewStatsTitle"
        android:layout_toStartOf="@+id/textViewLabel"
        android:onClick="scrollLeft" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/levels_arrowright"
        android:scaleType="fitCenter"
        android:background="#000000"
        android:layout_below="@+id/textViewStatsTitle"
        android:layout_toEndOf="@+id/textViewLabel"
        android:id="@+id/imageButtonArrowRight"
        android:onClick="scrollRight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PLAYTIME:"
        android:id="@+id/textViewPlayTime"
        android:layout_below="@+id/textViewLabel"
        android:layout_alignStart="@+id/textViewStatsTitle"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CORRECT SCREWS:"
        android:id="@+id/textViewCorrect"
        android:textStyle="bold"
        android:gravity="top"
        android:layout_below="@+id/textViewPlayTime"
        android:layout_alignStart="@+id/textViewPlayTime"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WRONG SCREWS:"
        android:id="@+id/textViewWrong"
        android:textStyle="bold"
        android:gravity="top"
        android:layout_below="@+id/textViewCorrect"
        android:layout_alignStart="@+id/textViewCorrect"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BEST COLORS:"
        android:id="@+id/textViewBestColors"
        android:textStyle="bold"
        android:gravity="top"
        android:layout_below="@+id/textViewWrong"
        android:layout_alignStart="@+id/textViewWrong"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WORST COLORS:"
        android:id="@+id/textViewWorstColors"
        android:textStyle="bold"
        android:gravity="top"
        android:layout_below="@+id/textViewBestColors"
        android:layout_alignStart="@+id/textViewBestColors"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="AVG. REACTION TIME:"
        android:id="@+id/textViewReaction"
        android:textStyle="bold"
        android:gravity="top"
        android:layout_below="@+id/textViewWorstColors"
        android:layout_alignStart="@+id/textViewWorstColors"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="30 HOURS"
        android:id="@+id/textViewPlayTimeValue"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="14dp"
        android:textAlignment="textEnd"
        android:layout_alignTop="@+id/textViewPlayTime"
        android:layout_alignRight="@+id/textViewStatsTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2003"
        android:id="@+id/textViewCorrectValue"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="14dp"
        android:textAlignment="textEnd"
        android:layout_toEndOf="@+id/textViewCorrect"
        android:layout_alignTop="@+id/textViewCorrect"
        android:layout_alignRight="@+id/textViewStatsTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3"
        android:id="@+id/textViewWrongValue"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="14dp"
        android:textAlignment="textEnd"
        android:layout_below="@+id/textViewCorrect"
        android:layout_alignEnd="@+id/textViewCorrectValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="RED"
        android:id="@+id/textViewBestColorsValue"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="14dp"
        android:textAlignment="textEnd"
        android:layout_alignTop="@+id/textViewBestColors"
        android:layout_toEndOf="@+id/textViewReaction"
        android:layout_alignRight="@+id/textViewPlayTimeValue"
        android:textColor="#ff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="YELLOW"
        android:id="@+id/textViewWorstColorsValue"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="14dp"
        android:textAlignment="textEnd"
        android:textColor="#ffe600"
        android:layout_alignTop="@+id/textViewWorstColors"
        android:layout_alignStart="@+id/textViewBestColorsValue"
        android:layout_alignEnd="@+id/textViewBestColorsValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=".2 SECONDS"
        android:id="@+id/textViewReactionValue"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="14dp"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textViewReaction"
        android:layout_alignEnd="@+id/textViewWorstColorsValue" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:id="@+id/imageButtonMainMenu"
        android:src="@drawable/mainmenu_noarrow"
        android:scaleType="fitCenter"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="gotoMain" />

</RelativeLayout>
